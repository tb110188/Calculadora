<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.tb110188.calculadora.Calculadora">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:text=""
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/historico"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <EditText
                android:text="0"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/display"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="1"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b1" />

            <Button
                android:text="2"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b2" />

            <Button
                android:text="3"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b3" />

            <Button
                android:text="+"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/badicao" />

            <Button
                android:text="C"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/blimpa" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="4"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b4" />

            <Button
                android:text="5"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b5" />

            <Button
                android:text="6"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b6" />

            <Button
                android:text="-"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bsubtracao" />

            <Button
                android:text="Del"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bapaga" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="7"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b7" />

            <Button
                android:text="8"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b8" />

            <Button
                android:text="9"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b9" />

            <Button
                android:text="x"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bmultiplicacao" />

            <Button
                android:text="%"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bporcentagem" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="0"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/b0" />

            <Button
                android:text=","
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bvirgula" />

            <Button
                android:text="="
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bigual" />

            <Button
                android:text="/"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bdivisao" />

            <Button
                android:text="X^Y"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bpotenciacao" />

        </TableRow>

    </TableLayout>

</LinearLayout>
